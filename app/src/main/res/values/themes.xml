<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.StockMarketApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    
    <style name="Theme.StockMarketApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.StockMarketApp</item>
    </style>
</resources>
